<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="August 26"
        android:id="@+id/tvDate"
        android:layout_marginLeft="90dp"
        android:textSize="16dp"
        android:textColor="@color/events_primary"
        android:paddingTop="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coding Session"
        android:id="@+id/tvName"
        android:layout_marginLeft="90dp"
        android:textSize="16dp"
        android:paddingTop="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Astronomy Club"
        android:id="@+id/tvClub"
        android:layout_marginLeft="90dp"
        android:textColor="@color/events_secondary_text"
        android:paddingTop="4dp"
        android:paddingBottom="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/events_divider"
        android:layout_marginTop="5dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"/>

</LinearLayout>