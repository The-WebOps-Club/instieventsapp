<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/events_primary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolBarStyle"
        app:layout_scrollFlags="scroll|enterAlways" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/iv_date"
                android:paddingTop="20dp"
                android:src="@drawable/ic_calender"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="August 26"
                android:id="@+id/tvDate"
                android:textSize="16dp"
                android:paddingTop="12dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coding Session"
                android:id="@+id/tvDate2"
                android:textSize="16dp"
                android:paddingTop="4dp"
                android:textColor="@color/events_primary_text"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/events_divider"
        android:layout_marginTop="5dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/iv_time"
                android:paddingTop="20dp"
                android:src="@drawable/ic_clock_grey"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:id="@+id/evtime"
                android:textSize="16dp"
                android:paddingTop="12dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.30"
                android:id="@+id/tvTime"
                android:textSize="16dp"
                android:paddingTop="4dp"
                android:textColor="@color/events_primary_text"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/events_divider"
        android:layout_marginTop="5dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/iv_place"
                android:paddingTop="20dp"
                android:src="@drawable/ic_location_grey"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place"
                android:id="@+id/evplace"
                android:textSize="16dp"
                android:paddingTop="12dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CRC"
                android:id="@+id/tvPlace"
                android:textSize="16dp"
                android:paddingTop="4dp"
                android:textColor="@color/events_primary_text"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/events_divider"
        android:layout_marginTop="5dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/iv_description"
                android:paddingTop="20dp"
                android:src="@drawable/ic_description"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/evdescription"
                android:textSize="16dp"
                android:paddingTop="12dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abc"
                android:id="@+id/tvDescription"
                android:textSize="16dp"
                android:paddingTop="4dp"
                android:textColor="@color/events_primary_text"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/events_divider"
        android:layout_marginTop="5dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/iv_convenor"
                android:paddingTop="20dp"
                android:src="@drawable/ic_convenors"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convenors"
                android:id="@+id/evconvenor"
                android:textSize="16dp"
                android:paddingTop="12dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.Abc"
                android:id="@+id/tvConvenor"
                android:textSize="16dp"
                android:paddingTop="4dp"
                android:textColor="@color/events_primary_text"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/events_divider"
        android:layout_marginTop="5dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"/>
</LinearLayout>
