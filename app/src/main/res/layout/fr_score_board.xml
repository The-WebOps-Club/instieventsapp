<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="5"
            android:text="Hostelname"
            android:id="@+id/scoreboard_hostelname_header"
            android:gravity="center"
            android:background="#4b3832"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <View
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:id="@+id/separator"
            android:visibility="visible"

            android:background="#eb8c00"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:text="Points"
            android:gravity="center"
            android:id="@+id/scoreboard_points_header"
            android:background="#4b3832"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />
        <!--
           android:textAppearance="?android:attr/textAppearanceLarge"
           -->

        <View
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:id="@+id/separator1"
            android:visibility="visible"
            android:background="#eb8c00"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"

            android:text="Position"
            android:gravity="center"
            android:id="@+id/scoreboard_position_header"
            android:background="#4b3832"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
           <!-- android:textAppearance="?android:attr/textAppearanceLarge"-->


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eb8c00"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreboardrv"
        />




</LinearLayout>